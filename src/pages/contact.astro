---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <section class="py-16 bg-gray-100">
        <div class="container mx-auto px-6">
            <!-- Titre de la section -->
            <h2 class="text-3xl font-bold text-center text-blue-900 mb-8">
                Contact
            </h2>

            <!-- Formulaire de contact -->
            <form
                action="#"
                method="POST"
                class="bg-white shadow-lg rounded-lg p-8 space-y-6"
            >
                <div>
                    <label
                        for="prenom"
                        class="block text-lg font-semibold text-blue-900 mb-2"
                        >Prénom</label
                    >
                    <input
                        type="text"
                        id="prenom"
                        name="prenom"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                        placeholder="Votre prénom"
                    />
                </div>

                <div>
                    <label
                        for="nom"
                        class="block text-lg font-semibold text-blue-900 mb-2"
                        >Nom</label
                    >
                    <input
                        type="text"
                        id="nom"
                        name="nom"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                        placeholder="Votre nom"
                    />
                </div>

                <div>
                    <label
                        for="email"
                        class="block text-lg font-semibold text-blue-900 mb-2"
                        >Email</label
                    >
                    <input
                        type="email"
                        id="email"
                        name="email"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                        placeholder="Votre email"
                    />
                </div>

                <div>
                    <label
                        for="message"
                        class="block text-lg font-semibold text-blue-900 mb-2"
                        >Message</label
                    >
                    <textarea
                        id="message"
                        name="message"
                        rows="6"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                        placeholder="Votre message"></textarea>
                </div>

                <div class="text-center">
                    <button
                        type="submit"
                        class="bg-pink-500 text-white px-6 py-3 rounded-full hover:bg-pink-400 transition duration-200"
                    >
                        ENVOYER
                    </button>
                </div>
            </form>

            <!-- Information de contact en bas -->
            <div class="mt-12 text-center text-lg text-gray-700">
                <p>
                    Vous pouvez également nous contacter via nos réseaux sociaux
                    ou en envoyant un email à <a
                        href="mailto:contact@vissport.com"
                        class="text-blue-900 font-semibold"
                        >contact@vissport.com</a
                    >
                </p>
            </div>
        </div>
    </section>
</Layout>
