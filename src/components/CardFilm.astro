---
const { ...film } = Astro.props;
---

<section class="py-6 flex justify-center">
    <div class="container mx-auto px-6">
        <!-- Cards container -->
        <div class="flex justify-center gap-8">
            <div class="bg-white shadow-lg rounded-lg overflow-hidden w-100">
                <a
                    href={`/films/${film.id}`}
                    class="bg-white shadow-lg rounded-lg overflow-hidden"
                >
                    <!-- Affichage de l'image avec l'URL de PocketBase -->
                    <img
                        src={film.imageUrl}
                        alt={film.titreFilm}
                        class="w-full h-auto max-h-80 object-contain rounded-lg"
                    />

                    <div class="p-4">
                        <h3 class="text-xl font-bold text-blue-900">
                            {film.titreFilm}
                        </h3>
                        <p class="text-gray-700 text-sm mt-2">
                            {film.synopsis}
                        </p>
                        <div class="mt-4">
                            <span class="block text-sm text-gray-500">
                                Durée: {film.duree} minutes
                            </span>
                            <span class="block text-sm text-gray-500">
                                Année: {film.annee_sortie}
                            </span>
                            <span class="block text-sm text-gray-500">
                                Réalisateur: {film.production}
                            </span>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>
